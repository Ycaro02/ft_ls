void sort_by_time(t_list *lst, int flag_nb)
{
    if (!lst)
        return ;
    t_list *head = lst;
    t_list *min = NULL;
    while (lst) 
    {
        if (!min)
            min = lst;
        t_file *current = (t_file *)lst->content;
        t_file *min_file = (t_file *)min->content;
        printf("current time %zu : %s, min_time %zu : %s\n", current->last_change, current->name, min_file->last_change, min_file->name);
        printf("current - min == %zu\n", current->last_change - min_file->last_change);
        if (current->last_change - min_file->last_change < 0)
        {
            min = lst;
            printf("change\n");
        }
        lst = lst->next;
    }
    t_file *tmp = head->content;
    head->content = min->content;
    min->content = tmp;
    sort_by_time(head->next, flag_nb);
}
